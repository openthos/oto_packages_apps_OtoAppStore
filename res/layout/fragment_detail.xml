<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/fragment_detail_icon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_launcher"/>

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        >

                        <ProgressBar
                            android:id="@+id/fragment_detail_progressbar"
                            android:max="100"
                            android:progress="0"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="100dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            android:visibility="gone"
                            />

                        <Button
                            android:id="@+id/fragment_detail_download"
                            android:layout_width="100dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:text="@string/download"
                            android:textColor="@color/button_cyan"
                            android:textSize="@dimen/first_title_size"
                            />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/fragment_detail_appName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:gravity="center_vertical"
                        android:text="@string/news"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/big_text_size"
                        />

                    <TextView
                        android:id="@+id/fragment_detail_appCompany"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:text="@string/news"
                        android:textColor="@color/item_type"
                        android:textSize="@dimen/three_title_size"
                        />

                    <RatingBar
                        android:id="@+id/fragment_detail_commentstar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="5"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:stepSize="0.5"
                        />

                    <TextView
                        android:id="@+id/fragment_detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="24dp"
                        android:lineSpacingExtra="8dp"
                        android:maxLines="2"
                        android:text="@string/news_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/second_title_size"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#eeeeee"/>

            <com.openthos.appstore.view.Kanner
                android:id="@+id/fragment_detail_kanner"
                android:layout_width="match_parent"
                android:layout_height="290dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#eeeeee"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    >

                    <FrameLayout
                        android:id="@+id/fragment_detail_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:id="@+id/fragment_detail_otherinfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/other_information"
                            android:textColor="@color/item_title"
                            android:textSize="@dimen/first_title_size"
                            />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/gray"/>

                        <TextView
                            android:id="@+id/fragment_detail_promulgator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/promulgator"
                            android:textColor="@color/item_title"
                            android:textSize="@dimen/second_title_size"
                            />

                        <TextView
                            android:id="@+id/fragment_detail_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/type"
                            android:textColor="@color/item_title"
                            android:textSize="@dimen/second_title_size"
                            />

                        <TextView
                            android:id="@+id/fragment_detail_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/size"
                            android:textColor="@color/item_title"
                            android:textSize="@dimen/second_title_size"
                            />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fragment_detail_morelove"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>