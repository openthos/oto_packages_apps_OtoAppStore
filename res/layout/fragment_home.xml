<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
              android:orientation="vertical"
              tools:context="com.openthos.appstore.fragment.HomeFragment">

    <com.openthos.appstore.view.BannerView
        android:id="@+id/fragment_home_carousel"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>

    <com.openthos.appstore.view.CustomListView
        android:id="@+id/fragment_home_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:scrollbars="none"/>
</LinearLayout>
