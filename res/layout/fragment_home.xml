<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.openthos.appstore.fragment.HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.openthos.appstore.view.Kanner
            android:id="@+id/fragment_home_kanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <ImageView
            android:id="@+id/fragment_home_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/banner_back"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
           />
        <ImageView
            android:id="@+id/fragment_home_forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/banner_next"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recomment"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/first_title_size"
                android:textColor="@color/text_gray"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="@color/view_line"/>

            <FrameLayout
                android:id="@+id/fragment_home_recommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popular"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/first_title_size"
                android:textColor="@color/text_gray"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="@color/view_line"/>

            <FrameLayout
                android:id="@+id/fragment_home_popular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favour"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/first_title_size"
                android:textColor="@color/text_gray"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="10dp"
                android:background="@color/view_line"/>

            <FrameLayout
                android:id="@+id/fragment_home_favour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fragment_home_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>
</LinearLayout>
