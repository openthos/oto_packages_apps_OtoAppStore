<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="50dp"
              android:paddingRight="50dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_manager_updateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updates"
            android:textColor="@color/item_title"
            android:textSize="@dimen/big_text_size"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/fragment_manager_updateAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/updateAll"
            android:textColor="@color/item_more"
            android:textSize="@dimen/first_title_size"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"/>

    <com.openthos.appstore.view.CustomListView
        android:id="@+id/fragment_manager_updateList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:divider="@color/view_line"
        android:dividerHeight="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fragment_manager_downloadTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/downloads"
            android:textColor="@color/item_title"
            android:textSize="@dimen/big_text_size"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/fragment_manager_startAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startAll"
            android:textColor="@color/item_more"
            android:textSize="@dimen/first_title_size"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/gray"/>

    <com.openthos.appstore.view.CustomListView
        android:id="@+id/fragment_manager_downloadList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:divider="@color/view_line"
        android:dividerHeight="0.5dp"/>
</LinearLayout>
