<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.openthos.appstore.fragment.HomeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <com.openthos.appstore.view.Kanner
            android:id="@+id/fragment_home_kanner"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

        <ImageView
            android:id="@+id/fragment_home_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/banner_back"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:id="@+id/fragment_home_forward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/banner_next"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            />

    </FrameLayout>

    <TextView
        android:id="@+id/text21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        >

        <FrameLayout
            android:id="@+id/fragment_home_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            />

        <FrameLayout
            android:id="@+id/fragment_home_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
