<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_download_appIcon"
        android:layout_width="@dimen/item_update_imageview_width"
        android:layout_height="@dimen/item_update_imageview_width"
        android:layout_marginRight="25dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_download_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/item_download_progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginRight="40dp"
            android:max="100"
            android:progressBackgroundTint="@color/gray"
            android:progressTint="@color/button_cyan"/>

        <TextView
            android:id="@+id/item_download_downloadState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_cyan" />
    </LinearLayout>


    <Button
        android:id="@+id/item_download_install"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/spacing_ten"
        android:background="@color/button_cyan"
        android:text="@string/uninstall"
        android:textColor="@color/white"
        android:textSize="@dimen/second_title_size"/>

    <Button
        android:id="@+id/item_download_remove"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/spacing_ten"
        android:background="@drawable/shape_button_white_cyan"
        android:text="@string/remove"
        android:textColor="@color/button_cyan"
        android:textSize="@dimen/second_title_size"/>

</LinearLayout>
