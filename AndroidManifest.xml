<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.openthos.appstore">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.openthos.appstore.app.StoreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/appstore"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.openthos.appstore.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.openthos.appstore.activity.BaseActivity" />
        <activity android:name="com.openthos.appstore.activity.DetailActivity">

        </activity>
        <activity android:name="com.openthos.appstore.activity.MoreActivity"
             android:launchMode="singleTask"/>
        <activity android:name="com.openthos.appstore.activity.SearchActivity" />
        <activity android:name="com.openthos.appstore.activity.CommentActivity"></activity>
    </application>

</manifest>
